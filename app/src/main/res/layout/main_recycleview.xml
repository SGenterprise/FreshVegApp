<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:screenOrientation="portrait"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="2dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/black"
                app:cardCornerRadius="4dp"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                >

                <com.smarteist.autoimageslider.SliderView
                    android:layout_height="240dp"
                    android:layout_width="match_parent"
                    app:sliderStartAutoCycle="true"
                    app:sliderScrollTimeInSec="3"
                    app:sliderIndicatorUnselectedColor="#A97C7C7C"
                    app:sliderIndicatorSelectedColor="#FFFFFF"
                    app:sliderIndicatorRadius="1.4dp"
                    app:sliderIndicatorMarginBottom="20dp"
                    app:sliderIndicatorPadding="3dp"
                    app:sliderIndicatorOrientation="horizontal"
                    app:sliderIndicatorMargin="15dp"
                    app:sliderIndicatorGravity="center_horizontal|bottom"
                    app:sliderIndicatorAnimationDuration="1000"
                    app:sliderAutoCycleEnabled="true"
                    app:sliderAutoCycleDirection="back_and_forth"
                    app:sliderAnimationDuration="1000"
                    android:visibility="visible"
                    android:id="@+id/imageSlider"/>

            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today's Deal"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:fontFamily="@font/calibri"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/deal_recycleview1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fresh Vegetables"
                android:textColor="@color/black"
                android:textAllCaps="true"
                android:fontFamily="@font/calibri"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                />
            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/category_recycleview1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/white"
                />
<androidx.cardview.widget.CardView
    android:layout_width="90dp"
    android:layout_height="300dp"
    >

</androidx.cardview.widget.CardView>
            </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fresh Fruits"
                android:textColor="@color/black"
                android:textAllCaps="true"
                android:fontFamily="@font/calibri"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/fruit_recycleview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="4dp"
                android:background="@color/white"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dry Fruits"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:fontFamily="@font/calibri"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/dryfruit_recycleview1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="4dp"
                android:background="@color/white"
                />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>
