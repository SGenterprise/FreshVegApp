<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:screenOrientation="portrait"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="2dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/black"
                app:cardCornerRadius="4dp"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                >

                <com.smarteist.autoimageslider.SliderView
                    android:id="@+id/imageSlider"
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:visibility="visible"
                    app:sliderAnimationDuration="1000"
                    app:sliderAutoCycleDirection="back_and_forth"
                    app:sliderAutoCycleEnabled="true"
                    app:sliderIndicatorAnimationDuration="1000"
                    app:sliderIndicatorGravity="center_horizontal|bottom"
                    app:sliderIndicatorMargin="15dp"
                    app:sliderIndicatorMarginBottom="20dp"
                    app:sliderIndicatorOrientation="horizontal"
                    app:sliderIndicatorPadding="3dp"
                    app:sliderIndicatorRadius="1.4dp"
                    app:sliderIndicatorSelectedColor="#FFFFFF"
                    app:sliderIndicatorUnselectedColor="#A97C7C7C"
                    app:sliderScrollTimeInSec="3"
                    app:sliderStartAutoCycle="true" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/dealtit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today's Deal"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:fontFamily="@font/calibri"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                />
        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/deal_recycleview1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/white"
                />
            <androidx.cardview.widget.CardView
                android:id="@+id/dealcard"
                android:layout_width="90dp"
                android:layout_height="300dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="4dp"
                app:cardCornerRadius="8dp"
                android:scrollbars="none"
                android:visibility="gone"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/redstoke_rectengle">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/calibri"
                        android:gravity="center"
                        android:text="View More Deals"
                        android:textColor="@color/green"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        </HorizontalScrollView>

            <androidx.cardview.widget.CardView
                android:id="@+id/freshvege_card"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                app:cardCornerRadius="4dp"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/freshvegetable"
                    />
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/vegtit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fresh Vegetables"
                android:textColor="@color/black"
                android:textAllCaps="true"
                android:fontFamily="@font/calibri"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                />
            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/category_recycleview1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/white"
                />
<androidx.cardview.widget.CardView
    android:id="@+id/cardveg"
    android:layout_width="90dp"
    android:layout_height="300dp"
    android:layout_marginTop="5dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="8dp"
    android:scrollbars="none"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/redstoke_rectengle">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/calibri"
            android:gravity="center"
            android:text="View More Fresh Vegies"
            android:textColor="@color/green"
            android:textSize="16sp"
            android:textStyle="bold"

            />
    </LinearLayout>
</androidx.cardview.widget.CardView>
            </LinearLayout>
            </HorizontalScrollView>
            <androidx.cardview.widget.CardView
                android:id="@+id/freshfruit_card"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                app:cardCornerRadius="4dp"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/freshfruit_viewall"
                    />
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/fruittit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="7dp"
                android:layout_marginRight="7dp"
                android:fontFamily="@font/calibri"
                android:text="Fresh Fruits"
                android:textAllCaps="true"
                android:textColor="@color/black" />

            <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/fruit_recycleview"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:padding="4dp"
                android:background="@color/white"
                />
            <androidx.cardview.widget.CardView
                android:id="@+id/fruitcard"
                android:layout_width="90dp"
                android:layout_height="300dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="4dp"
                app:cardCornerRadius="8dp"
                android:scrollbars="none"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/redstoke_rectengle">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/calibri"
                        android:gravity="center"
                        android:text="View More Fresh Fruits"
                        android:textColor="@color/green"
                        android:textSize="16sp"
                        android:textStyle="bold"

                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        </HorizontalScrollView>
            <TextView
                android:id="@+id/drytit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dry Fruits"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:fontFamily="@font/calibri"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                />
        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/dryfruit_recycleview1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="4dp"
                android:background="@color/white"
                />
            <androidx.cardview.widget.CardView
                android:id="@+id/dryfruitcard"
                android:layout_width="90dp"
                android:layout_height="300dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"

                android:layout_marginBottom="4dp"
                app:cardCornerRadius="8dp"
                android:scrollbars="none"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/redstoke_rectengle">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/calibri"
                        android:gravity="center"
                        android:text="View More Dry Fruits"
                        android:textColor="@color/green"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        </HorizontalScrollView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>
