<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="wrap_content"
    android:id="@+id/itemview2"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        >

        <RelativeLayout
            android:layout_width="140dp"
            android:layout_height="100dp"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/proimage"
                android:layout_marginStart="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                 />
            <LinearLayout
                android:id="@+id/greyback"
                android:layout_marginStart="5dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/clr_grey_text_transparent"
                android:visibility="gone">

                <TextView
                    android:id="@+id/textoos"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Out Of Stock"
                    android:layout_gravity="center"
                    android:textColor="@color/light_black"
                    android:gravity="center"
                    android:visibility="gone"
                    />

            </LinearLayout>

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="10dp"
            >
         <TextView
             android:id="@+id/txt_cat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             android:layout_marginTop="4dp"
            android:text="Category Name"
            android:textColor="@color/black"
            android:fontFamily="@font/helveticaneuelt"
            android:textSize="15sp"
            />
            <TextView
                android:id="@+id/pro_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Product name"
                android:layout_marginTop="2dp"
                android:textColor="@color/black"
                android:fontFamily="@font/helveticaneuelt"
                android:textSize="15sp"
                />


      // chnage this shit
                    <TextView
                        android:id="@+id/quantity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Product Quantity"
                        android:layout_marginTop="4dp"
                        android:textColor="@color/grey"
                        android:fontFamily="@font/helveticaneuelt"
                        android:textSize="13sp"
                        />

                    <TextView
                        android:id="@+id/price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Product Price"
                        android:layout_marginTop="2dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:fontFamily="@font/helveticaneuelt"
                        android:textSize="15sp"
                        />



            <LinearLayout
                android:id="@+id/addtocartlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="bottom"
                android:layout_alignParentEnd="true"
                android:visibility="visible">


            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                app:cardCornerRadius="2dp"
                android:layout_margin="4dp"
                >
                <TextView
                    android:id="@+id/Add"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="ADD"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="#B5FF0000"
                    android:textSize="12dp"
                    />
                <LinearLayout
                    android:id="@+id/laypm"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    >
                    <androidx.cardview.widget.CardView
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="4dp"
                        android:layout_weight="1"
                        >

                        <TextView
                            android:id="@+id/minus"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="-"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:background="#B5FF0000"
                            android:textSize="14dp"
                            />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/count_text"
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:gravity="center"
                        android:maxLength="2"
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        android:layout_weight="1"
                        />
                    <androidx.cardview.widget.CardView
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="4dp"
                        android:layout_weight="1"
                        >
                        <TextView
                            android:id="@+id/plus"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="+"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:background="#B5FF0000"
                            android:textSize="14dp"

                            />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>