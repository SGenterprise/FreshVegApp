<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:cardCornerRadius="4dp"
        android:layout_margin="5dp"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            >
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="name"
                android:lines="1"
                android:textStyle="bold"
                android:textSize="18dp"
                android:paddingStart="10dp"
                android:textColor="@color/black"
                android:fontFamily="@font/calibri"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            >
            <TextView
                android:id="@+id/houseno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="House No."
                android:textSize="18dp"
                android:textColor="@color/black"
                android:paddingLeft="10dp"
                android:fontFamily="@font/calibri"
                />
            <TextView
                android:id="@+id/build"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Build Name"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:paddingLeft="10dp"
                android:fontFamily="@font/calibri"
                />

        </LinearLayout>
        <TextView
            android:id="@+id/addline1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="address 2lines.. "
            android:maxLines="3"
            android:textSize="18dp"
            android:layout_marginTop="4dp"
            android:textColor="@color/black"
            android:paddingLeft="10dp"
            android:fontFamily="@font/calibri"
            />

        <TextView
            android:id="@+id/numberoftime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number to contact at time of delivery"
            android:lines="1"
            android:textSize="18dp"
            android:layout_marginTop="4dp"
            android:textColor="@color/black"
            android:paddingLeft="10dp"
            android:fontFamily="@font/calibri"
            />
        <TextView
            android:id="@+id/landmark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Landmark"
            android:lines="1"
            android:textSize="18dp"
            android:layout_marginTop="4dp"
            android:textColor="@color/black"
            android:paddingLeft="10dp"
            android:fontFamily="@font/calibri"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:backgroundTint="@color/red2"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                app:cardCornerRadius="4dp"
                android:visibility="gone"
                >
            <TextView
                android:id="@+id/edit_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="EDIT"
                android:padding="8dp"
                android:gravity="center"
                android:fontFamily="@font/calibri"
                android:textColor="@color/white"
                android:paddingLeft="10dp"
                />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:backgroundTint="@color/red2"
                android:layout_weight="1"
                app:cardCornerRadius="4dp"
                >
                <TextView
                    android:id="@+id/remove_add"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="REMOVE"
                    android:padding="8dp"
                    android:gravity="center"
                    android:fontFamily="@font/calibri"
                    android:textColor="@color/white"
                    android:paddingLeft="10dp"

                    />
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>
    </androidx.cardview.widget.CardView>

    <RadioButton
        android:id="@+id/selectRadio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_gravity="center"
        />
</LinearLayout>